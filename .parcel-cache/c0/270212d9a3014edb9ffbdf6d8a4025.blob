var _config = require('./config');
var _helper = require('./helper');
const state = {
  recipe: {},
  search: {
    query: '',
    result: [],
    page: 1,
    resultPerPage: 10
  }
};
const loadRecipe = async function (id) {
  try {
    if (!id) return;
    let recipe = await _helper.getJson(`${_config.URL_API}/${id}`);
    recipe = recipe.recipe;
    state.recipe = {
      publisher: recipe.publisher,
      image: recipe.image_url,
      ingredients: recipe.ingredients,
      id: recipe.id,
      title: recipe.title,
      servings: recipe.servings,
      cookingTime: recipe.cooking_time,
      sourceUrl: recipe.source_url
    };
  } catch (err) {
    throw err;
  }
};
const loadSearchResult = async function (query) {
  try {
    if (!query) return;
    const data = await _helper.getJson(`${_config.URL_API}?search=${query}`);
    state.search.result = data.recipes.map(rec => {
      return {
        publisher: rec.publisher,
        image: rec.image_url,
        id: rec.id,
        title: rec.title
      };
    });
  } catch (err) {
    throw err;
  }
};
const getSearchResult = async function (page) {
  console.log('hii');
  this.state.search.page = page;
  const totalp = this.state.search.result.length / 10;
  console.log(totalp);
};
